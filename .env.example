# Database
DATABASE_URL="file:./dev.db"

# Whisper Server (running on host)
WHISPER_API_URL="http://host.docker.internal:62277"

# Qwen2-Audio Server (running in Docker)
QWEN_API_URL="http://qwen2-audio:8000"

# JWT Secret (generate a secure random string)
JWT_SECRET="change-this-to-a-secure-random-string"

# Default Discord Webhook (optional - users can override)
DEFAULT_DISCORD_WEBHOOK_URL=""

# Transcription Settings
CONFIDENCE_THRESHOLD="0.60"
CLUSTERING_PROXIMITY_SECONDS="5"
CORRECTION_WINDOW_SECONDS="20"

# File Upload Settings
MAX_FILE_SIZE_MB="500"
UPLOAD_DIR="./uploads"

# Worker Settings
WORKER_POLL_INTERVAL_MS="3000"

# Health Monitoring Settings
HEALTH_CHECK_INTERVAL_SECONDS="60"
HEALTH_CHECK_TIMEOUT_SECONDS="10"
HEALTH_CHECK_FAILURE_THRESHOLD="3"
HEALTH_DISCORD_WEBHOOK_URL=""
